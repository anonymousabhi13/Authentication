<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
    <title>Hello, world!</title>
</head>

<body>
    <nav class="navbar  navbar-light bg-light">
        <button type="submit" class="btn btn-danger mx-5"><a style="color: black; text-decoration: none;"
                href="/logout">logout</a></button>
        <button type="submit" class="btn btn-warning mx-5"><a style="color: black; text-decoration: none;"
                href="/timeline">Timeline</a></button>
        </div>
    </nav>


    <div class="container">
        <div class="card" style="width: 5rem; height: 5rem; border-radius: 60%; overflow: hidden; object-fit: cover;">
            <img src="./images/upload/<%=elem.image%>" class="card-img-top" alt="...">
        </div>
        <form action="/upload" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">uploads</label>
                <input type="file" name="file" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp">
            </div>
            <button type="submit" class="btn btn-primary">upload</button>
        </form>
    </div>
    <div class="container" style="display: flex;">

        <% elem.mypost.forEach(function(show){%>
            <div class="container my-3 d-flex">

                <div class="card" style="width: 20rem;">
                    <img src="<%=show.image%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <a href="/like/<%= show._id %>" class="btn btn-primary">
                            <%= show.like.length %> like
                        </a>

                        <p class="card-text">
                            <%=show.product%>
                        </p>

                        <a href="/delete/<%= show._id %>" class="btn btn-danger"> delete</a>
                        <a href="/update/<%= show._id %>" class="btn btn-warning"> edit</a>

                    </div>
                </div>
            </div>
            <%})%>
    </div>

    <div class="container my-5">
        <form action="/create" method="post">
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">comment</label>
                <input name="productname" type="text" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">create post</label>
                <input name="image" type="text" class="form-control" id="exampleInputPassword1">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>